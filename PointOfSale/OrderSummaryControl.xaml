<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="60px"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="375px"/>
            <RowDefinition Height="30px"/>
        </Grid.RowDefinitions>
        <TextBox Text="Order: " TextChanged="TextBox_TextChanged"/>
        <ListView Grid.Row="1" ItemsSource ="{Binding Path = Items}"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Name="Subtotal" Text="{Binding Path=Subtotal, StringFormat=c}"/>
    </Grid>
</UserControl>
